{
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingOvertype": "always",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.smartSelect.selectSubwords": false,
  "editor.smartSelect.selectLeadingAndTrailingWhitespace": false,
  "editor.wordWrap": "on",
  "editor.rulers": [110],
  "editor.linkedEditing": true,
  "terminal.integrated.defaultProfile.osx": "nixFish",
  "terminal.integrated.profiles.osx.nixFish": {
    "path": "/etc/profiles/per-user/tom/bin/fish",
    "args": [
      "-l"
    ]
  },
  "terminal.integrated.defaultProfile.linux": "fish",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  }
}
